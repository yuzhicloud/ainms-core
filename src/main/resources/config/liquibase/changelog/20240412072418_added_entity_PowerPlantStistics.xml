    <!--
        Added the entity PowerPlantStistics.
    -->
    <changeSet id="20240412072418-1" author="jhipster">
        <createTable tableName="power_plant_stistics">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="total_count" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="online_count" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="offline_count" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="other_count" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="statistic_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="statistic_time" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="province_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="power_plant_stistics" columnName="statistic_time" columnDataType="${datetimeType}"/>
    </changeSet>

